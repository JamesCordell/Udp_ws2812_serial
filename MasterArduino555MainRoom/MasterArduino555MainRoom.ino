EthernetUDP udp;

void setup() {
  
  Serial.begin(9600);

  uint8_t mac[6] = {0x00,0x01,0x02,0x03,0x04,0x05};

  Ethernet.begin(mac,IPAddress(192,168,0,6));

  int success = udp.begin(5000);
  
  ledsetup();
  
  for (int i =0,b=0;i < 64;++i,++b) {
   showColor(i,i,b/4);//slight yellow tinge from on.
  delay(15); 
  }
  //Serial.println(success ? "success" : "failed");
}

short int id=0;
char* mode;
int r=0,g=0,b=0;


void loop() {

  //check for new udp-packet:
  int size = udp.parsePacket();
  if (size > 0) {
    do {
      char* msg = (char*)malloc(size+1);
      int len = udp.read(msg,size+1);
      msg[len]=0;

      char* sub = msg;
      id = atoi(strtok(sub,":"));

      mode = strtok(NULL,":");
      r = atoi(strtok(NULL,":"));
      g = atoi(strtok(NULL,":"));
      b = atoi(strtok(NULL,":"));
      if ( id == ID ) {
        if ( strcmp(mode,"colorWipe") == 0 ) {
         colorWipe(r, g, b, atoi(strtok(NULL,":"))); //  
        }
        if ( strcmp(mode,"showColor") == 0 ) {
         showColor(r, g, b); //  
        }
        if ( strcmp(mode,"rainbowCycle") == 0 ) {
         rainbowCycle(r,g,b);
        }
      } else { //pass message onwards not for us.
         String st = "";
         st +=  id; 
         st += ":";
         st += mode; 
         st += ":";
         st += r;
         st += ":";
         st += g;
         st += ":";
         st += b;
         st += "\n";
         Serial.print(st);
      }
      free(msg);
    } while ((size = udp.available())>0);
    //finish reading this packet:
    udp.flush();
    int success;
    do {
        success = udp.beginPacket(udp.remoteIP(),udp.remotePort());
    } while (!success);
      
      if ( strcmp(mode,"getStatus") == 0 ) {
      String cc = ""; //current colour
      cc += id;
      cc += ":";
      cc += mode;
      cc += ":";
      cc += r;
      cc += ":";
      cc += g;
      cc += ":";
      cc += b;
      success = udp.println(cc);
      }

    //Serial.print("bytes written: ");
    //Serial.println(success);

    success = udp.endPacket();

    //Serial.print("endPacket: ");
    //Serial.println(success ? "success" : "failed");

    udp.stop();
    
    //restart with new connection to receive packets from other clients
    //Serial.print("restart connection: ");
    //Serial.println (udp.begin(5000) ? "success" : "failed");
    udp.begin(5000);  
  }
}

